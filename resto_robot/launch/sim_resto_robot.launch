<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="world_file"  default="$(find resto_robot)/worlds/costa_coffee.world"/>   
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>

    <!-- open gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name"  default="$(arg world_file)"/>   
        <arg name="paused" default="$(arg paused)"/>
        <arg name="use_sim_time" default="$(arg use_sim_time)"/>
        <arg name="gui" default="$(arg gui)"/>
        <arg name="headless" default="$(arg headless)"/>
        <arg name="debug" default="$(arg debug)"/>
    </include>


    <include file="$(find resto_robot)/launch/spawn_resto_robot.launch"/>
    <include file="$(find resto_robot)/launch/resto_robot_control.launch"/>
    
    


    <!--node name="rviz" pkg="rviz" type="rviz" args=""/-->

    <!--<node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
        <param name="default_topic" value="/resto_robot/move_base_controller/cmd_vel"/> 
    </node>-->

</launch>